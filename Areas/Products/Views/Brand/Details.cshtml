@model Brand

@{
    ViewData["Title"] = "Chi tiết hãng sản phẩm";
}

<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-6">
                        <dt>Tên hãng</dt>
                    </div>
                    <div class="col-md-6">
                        <dd>@Model.Name</dd>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <dt>Địa chỉ Url</dt>
                    </div>
                    <div class="col-md-6">
                        <dd>@Model.Slug</dd>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <dt>Mô tả</dt>
                        <dd>@Model.Description</dd>
                    </div>
                </div>

                <a asp-action="Index" asp-controller="Brand" asp-area="Products" class="btn btn-primary mt-3">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>