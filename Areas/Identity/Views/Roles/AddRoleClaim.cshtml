@model EditClaimModel

@{
    ViewData["Title"] = "Thêm Claim";
}

<div class="card h-100">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @ViewData["Title"] cho Role @ViewBag.Role?.Name
    </div>
    <div class="card-body">
        <partial name="_AlertMessage"></partial>
        <div class="row">
            <div class="col-xl-4 col-md-6">
                <form method="post" asp-route-roleid="@ViewBag.Role?.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group mb-4">
                        <label asp-for="ClaimType" class="form-label"></label>
                        <input asp-for="ClaimType" class="form-control">
                        <span asp-validation-for="ClaimType" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="ClaimValue" class="form-label"></label>
                        <input asp-for="ClaimValue" class="form-control">
                        <span asp-validation-for="ClaimValue" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <button class="btn btn-success">Thêm</button>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Roles" asp-area="Identity"
                            asp-route-roleid="@ViewBag.Role?.Id">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}