@model ChangePasswordModel

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
}

<div class="manager-user">
    <h4 class="heading">@ViewData["Title"]</h4>
    <hr class="divider primary-text">
    <div class="change-password-container">

        <div class="row">
            <div class="col-md-12 col-lg-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="NewPassword"></label>
                        <input class="form-control" asp-for="NewPassword" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="ConfirmPassword"></label>
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group my-4">
                        <button type="submit" class="btn primary-bg text-white">Đổi mật khẩu</button>
                        <a asp-action="Index" asp-controller="Manage" asp-area="Identity" class="btn border-1 border-secondary ms-2">Quay
                            lại</a>
                    </div>
                </form>
            </div>
            <partial name="_AlertMessage" />
        </div>
    </div>

</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}