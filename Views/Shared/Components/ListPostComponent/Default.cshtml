@model List<Post>
<div class="post-container mt-2">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-4 col-lg-3">
                <div class="post-item">
                    <div class="post-img">
                        <a href='@Url.Action("Details", "ViewPost", new {area = "Posts", slug = item.Slug})'><img
                                src="/files/Posts/@item.Image" alt=""></a>
                    </div>
                    <p class="post-title fw-semibold mt-2 mb-1">
                        <a href='@Url.Action("Details", "ViewPost", new {area = "Posts", slug = item.Slug})'
                            class="text-decoration-none text-color">@item.Title</a>
                    </p>
                    <p class="post-date-created mb-0 ms-2 fw-semibold text-secondary">
                        @item.CreatedAt.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>
        }
    </div>
</div>